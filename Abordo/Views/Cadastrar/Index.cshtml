                    <td>@cadastrar.TelefoneCli</td>
                    <td>@cadastrar.EmailCli</td>
                    <td>@cadastrar.Situacao</td>

                    <td>
                        <form asp-controller="Cadastrar" asp-action="Deletar">
                            <button class="btn btn-danger" type="submit">x deletar</button>
                            <input asp-for="IdCli" style="visibility:hidden;" type="text" value="@cadastrar.IdCli">
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>



